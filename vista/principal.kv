#:kivy 1.10.0

<Principal>: 
	orientation: 'vertical'
	spacing: 10
	padding: 3
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size	
	BoxLayout:
		orientation:'horizontal'	
		Label:
		Label:
		BoxLayout:
			orientation:'vertical'
			Label:
			Label:
				id: lbOfelia
				text: "Ofelia"
				color: 0, 0, 0, 1
				font_size: 100.0
		Scatter:
			scale: 2.86
			do_rotation:False
			do_scale:False
            do_translation:False
			Image:
				source: 'veget.png'
				size_hint: .4, .4
				#size: 150,77
	BoxLayout:
		height: .2
		orientation: 'horizontal'
		Button:
			id: vent
			size_hint: 1,.17
			text: 'Ventas'  
			font_size :'25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
			on_press: root.btnVentas()
		Button:
			id: cuen
			size_hint: 1,.17
			font_size :'25sp'
			text: 'Cuentas'
			background_normal: 'normal.png'			
			background_color: 1, .745, .039, 1
			on_press: root.btnCuentas()
		Button:
			id: usu
			size_hint: 1,.17
			font_size :'25sp'
			text: 'Usuarios'
			background_normal: 'normal.png'		
			background_color: 1, .745, .039, 1
			on_press: root.btnUsuarios()
		Button:
			id: pag
			size_hint: 1,.17
			font_size :'25sp'
			text: 'Pagos'
			background_normal: 'normal.png'			
			background_color: 1, .745, .039, 1
			on_press: root.btnPagos()
		 
		
		 
	 