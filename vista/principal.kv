#:kivy 1.10.0

<Principal>: 
	orientation: 'vertical'
	spacing: 10
	padding: 3
	
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		BoxLayout:
			orientation: 'vertical'
			Image:

				source: '../image/Ofelia.png'
				size_hint: 1,.2
			Image:
				source: 'vegetal.png'
				size: 150,77
	BoxLayout:
		height: .2
		orientation: 'horizontal'
		Button:
			size_hint: 1,.17
			text: 'Ventas'
			background_color: .2, .4, .9, 1
			on_press: root.btnVentas()
		Button:
			size_hint: 1,.17
			text: 'Cuentas'
			background_color: .2, .4, .9, 1
			on_press: root.btnCuentas()
		Button:
			size_hint: 1,.17
			text: 'Usuarios'
			background_color: .2, .4, .9, 1
			on_press: root.btnUsuarios()
		Button:
			size_hint: 1,.17
			text: 'Pagos'
			background_color: .2, .4, .9, 1
			on_press: root.btnPagos()
		 
		
		 
	 