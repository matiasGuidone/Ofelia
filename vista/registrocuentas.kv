#:kivy 1.10.0
 

<Box>:
	 
	orientation: 'vertical'
	spacing: 15
	padding: 4
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		Image:
			source: 'vegetal.png'
	
	BoxLayout:
		orientation: 'horizontal'
		Label:
		
			text: 'Tipo de cuenta:'
			color: 0, 0, 0, 1
			
		ToggleButton:
		
            text:"Empleado"
            group: "tipog"
            id: btn-empleado
            on_press: root.btnEmpleado()
			background_color: .2, .4, .9, 1

        ToggleButton:
		
            text:"Proveedor"
            group: "tipog"
            id: btn-proveedor
            on_press: root.btnProveedor()
			background_color: .2, .4, .9, 1

		ToggleButton:
		
            text:"Fijos"
            group: "tipog"
            id: btn-fijos
            on_press: root.btnFijos()
			background_color: .2, .4, .9, 1
        ToggleButton:
		
            text:"Otros"
            group: "tipog"
            id: btn-otros
            on_press: root.btnOtros() 
			background_color: .2, .4, .9, 1
	Label:

	BoxLayout:
		orientation: 'horizontal'
		Label:
			id: lblSubcate
			text: ''
			color: 0, 0, 0, 1
		Button:
			id: btnMainTG
			text: "Seleccionar"
		DropDown:
			id: drpTipogasto
	Label:
	
	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		
		Label: 
		Button:
			background_color: 0, 0, 1, 1 
			on_press: root.btnNuevo()
			id: btnNuevo
			disabled: True
			BoxLayout:
				pos: self.parent.pos
				size: self.parent.size
				orientation: 'horizontal'
				Label:
				Image:
					source: '../image/icon/plus-square.png'
					width: 17
					size_hint_x: None
					
				Label:
					text: 'Nuevo'
					width: 70
					size_hint_x: None
					color: 1, 1, 1, 1
				Label:
		Button:
			background_color: 0, 0, 1, 1 
			on_press: root.btnEliminar()
			id: btnEliminar
			disabled: True
			BoxLayout:
				pos: self.parent.pos
				size: self.parent.size
				orientation: 'horizontal'
				Label:
				Image:
					source: '../image/icon/minus-square.png'
					width: 17
					size_hint_x: None
					
				Label:
					text: 'Eliminar'
					width: 70
					size_hint_x: None
					color: 1, 1, 1, 1
				Label:
		Button:
			background_color: 0, 0, 1, 1 
			on_press: root.btnEditar()
			id: btnEditar
			disabled: True
			BoxLayout:
				pos: self.parent.pos
				size: self.parent.size
				orientation: 'horizontal'
				Label:
				Image:
					source: '../image/icon/edit.png'
					width: 17
					size_hint_x: None
					
				Label:
					text: 'Editar'
					width: 70
					size_hint_x: None
					color: 1, 1, 1, 1
				Label:
		Label: 
	Label:		 
	BoxLayout:
        orientation: 'horizontal'
		Button:
			text: 'Salir'
			background_color: .2, .4, .9, 1
			on_press: app.stop() 
	 	 