#:kivy 1.10.0

<Box>:
    text: 'Venta'
	orientation: 'vertical'  
    canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_y: 'top'
        anchor_x: 'left'
        BoxLayout:
            orientation:'horizontal'
            size_hint: None, None
            size: 340, 150
            BoxLayout:
                orientation:'vertical'
                size_hint: None, None
                size: 220, 150
                ToggleButton:
                    id: tgbEstado                
                    text: 'Estado de Cajas'
                    font_size: '16sp'
                    background_normal: 'normal.png'	
                    size_hint: None, None	
                    size: 190, 30
                    background_color: 1, .745, .039, 1
                    on_press: root.estado()     
                Label:
                    size_hint: None, None
                    size: 220, 20                     
                BoxLayout:
                    orientation:'horizontal'
                    Label:   
                        text:'   Habilitar caja 1'
                        size: 190, 30
                        font_size: '16sp'    
                        color: 0,0,0,1     
                    CheckBox:
                        id: cajaa
                        valign: 'center'
                        h_hint: None
                        size: 30, 30
                        color: 1, .745, .039, 1
                        disabled: True
                                  
                BoxLayout:
                    orientation:'horizontal'
                    Label:
                        text:'   Habilitar caja 2'
                        size: 190, 30
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    CheckBox:
                        id: cajab
                        valign: 'center'
                        size: 30, 30
                        h_hint: None
                        color: 1, .745, .039, 1
                        disabled: True
            BoxLayout:
                orientation:'vertical'
                size_hint: None, None		        
                size: 120, 150
                BoxLayout:
                    orientation:'vertical'      
                    Label:
                        id: lbtitu
                        text: 'Turno'  
                        font_size: '18sp'  
                    BoxLayout:
                        orientation:'horizontal'  
                        size: 120 , 30  
                        Label:
                            id: laIni
                            text: 'Inicial:'
                            font_size: '16sp'  
                        Label:
                            id:lblinicial
                            text:''
                            font_size: '16sp'                  
                    BoxLayout:
                        orientation:'horizontal'  
                        size: 120 , 30    
                        Label:
                            id: lbvent
                            text: 'Venta:'
                            font_size: '16sp'  
                        Label:
                            id:lblventa
                            text:''
                            font_size: '16sp'                  
                    BoxLayout:
                        orientation:'horizontal'  
                        size: 120 , 30  
                        Label:
                            id: lbtot
                            text: 'Total:'
                            font_size: '16sp'  
                        Label:
                            id:lbltotal 
                            text:''
                            font_size: '16sp'                  
                    BoxLayout:
                        orientation:'horizontal'  
                        size: 120 , 30  
                        Label:
                            id: lbAbri
                            text: 'Abrió:'
                            font_size: '16sp'  
                        Label:
                            id: lbhora
                            text: ''
                            font_size: '16sp'  
                
    BoxLayout:
        orientation:'horizontal'
        id:boxa
        size_hint: None, None
        size: 400, 90
        Scatter:         
            id: Scat
            do_rotation : False     
            scale_min : .5 
            scale_max : 2.                
            GridLayout:
                size: 600 , 70  
                rows: 1
                cols: 4  # Para agregar observación pongo 6 columnas
                size_hint_x: .7  
                size_hint_y: .10
                BoxLayout:   
                    orientation: 'vertical'  
                    size: 110 , 70  
                    size_hint: 1, 1  
                    Label:
                        text: 'Cargar Venta:   '   
                        valign: 'center' 
                        font_size: '20sp'    
                        color: 0, 0, 0, 1     
                        disabled: not cajaa.active 
                    Label:
                        text: 'Venta Anterior: '
                        valign: 'center' 
                        font_size: '20sp'    
                        color: 0, 0, 0, 1
                        disabled: not cajaa.active 
                BoxLayout:
                    orientation:'vertical'
                    size: 10 , 70    
                    size_hint: 1, 1      
                    Label:
                        text: '$'
                        valign: 'center' 
                        color: 0, 0, 0, 1
                        font_size: '20sp'   
                        disabled: not cajaa.active  
                    Label:
                        text: '$'
                        valign: 'center' 
                        color: 0, 0, 0, 1
                        font_size: '20sp'   
                        disabled: not cajaa.active  
                BoxLayout:   
                    orientation: 'vertical'
                    size: 40 , 70    
                    size_hint: 1, 1   
                    TextInput:
                        id: timonto     
                        hint_text:"Monto"
                        input_filter: 'float'
                        focused: True
                        write_tab: False 
                        multiline: False 
                        font_size: '20sp'      
                        on_text_validate: root.enter(1)     
                        disabled: not cajaa.active          
                    Label:
                        id: lbAnterior
                        text: 'Monto'
                        color: 0, 0, 0, 1
                        valign: 'center' 
                        font_size: '20sp'   
                        disabled: not cajaa.active  

                BoxLayout:   
                    orientation: 'vertical'  
                    size: 200 , 70  
                    size_hint: 1, 1   
                    BoxLayout:   
                        orientation: 'horizontal'  
                        TextInput:
                            size: 30 , 33         
                            id: tiPago 
                            input_filter: 'int'
                            hint_text:"Pagó"
                            font_size: '20sp'    
                            focused: True
                            write_tab: False 
                            multiline: False   
                            on_text: root.filtro()
                            on_text_validate: root.enter(2)  
                            disabled: not cajaa.active 
                        Label:
                            text: 'Efectivo'
                            size: 168 , 33  
                            valign: 'center' 
                            color: 0, 0, 0, 1
                            font_size: '20sp'    
                            id: lbPago
                            disabled: not cajaa.active 
                    Label:
                        text: 'Pagó'
                        color: 0, 0, 0, 1
                        valign: 'center' 
                        font_size: '20sp'    
                        id: lbPagoAnterior          
                        disabled: not cajaa.active         
                            


