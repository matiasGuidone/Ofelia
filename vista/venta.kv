#:kivy 1.10.0

<Box>:
    text: 'Venta'
	orientation: 'vertical'  
    canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_y: 'top'
        BoxLayout:
            orientation:'horizontal'
            size_hint: None, None
            size: 600, 50
            BoxLayout:
                orientation:'vertical'
                ToggleButton:
                    id: tgbEstado                
                    text: 'Estado de Cajas'
                    font_size: '25sp'
                    background_normal: 'normal.png'				        
                    background_color: 1, .745, .039, 1
                    on_press: root.estado()     
            Label:
            Label:
            Label:           
            Label:
                text:'Habilitar caja 1'
                font_size: '25sp'    
                color: 0,0,0,1       
            Label:
            Label:     
            CheckBox:
                id: cajaa
                valign: 'center'
                color: 1, .745, .039, 1
                active: False
                disabled: False
            Label:
            Label:
            Label:
            Label:
            Label:
            Label:
                text:'Habilitar caja 2'
                font_size: '25sp'  
                color: 0,0,0,1        
            Label:
            Label:  
            CheckBox:
                id: cajab
                valign: 'center'
                color: 1, .745, .039, 1
                active: False
                disabled: False
    BoxLayout:
        orientation:'vertical'
        size_hint: None, None		        
        size: 120, 150
        Scatter:
            do_rotation : False     
            scale_min : .5 
            scale_max : 2.  
            BoxLayout:
                orientation:'vertical'            
                Label:
                    text: 'Turno'  
                    font_size: '18sp'  
                    color: 0,0,0,1   
                GridLayout:
                    size: 120 , 120  
                    rows: 4
                    cols: 2
                    padding: 2
                    background: 'Fondop.png'
                    Label:
                        text: 'Inicial:'
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    Label:
                        id:lblinicial
                        text:''
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    Label:
                        text: 'Venta:'
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    Label:
                        id:lblventa
                        text:''
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    Label:
                        text: 'Total:'
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    Label:
                        id:lbltotal
                        text:''
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    Label:
                        text: 'Abrió:'
                        font_size: '16sp'  
                        color: 0,0,0,1   
                    Label:
                        id: lbhora
                        text: ''
                        font_size: '16sp'  
                        color: 0,0,0,1   
            
    BoxLayout:
        orientation:'horizontal'
        id:boxa
        size_hint: None, None
        size: 810, 90
        Scatter:         
            id: Scat
            do_rotation : False     
            scale_min : .5 
            scale_max : 2.                
            GridLayout:
                size: 810 , 90  
                rows: 1
                cols: 4
                size_hint_x: .7  
                size_hint_y: .10
                BoxLayout:   
                    orientation: 'vertical'  
                    size: 170 , 70  
                    size_hint_x: 1  
                    size_hint_y: 1
                    Label:
                        text: 'Cargar Venta:   '    
                        font_size: '20sp'    
                        color: 0, 0, 0, 1     
                        disabled: not cajaa.active 
                    Label:
                        text: 'Venta Anterior: '
                        font_size: '20sp'    
                        disabled: not cajaa.active 
                        color: 0, 0, 0, 1
                BoxLayout:   
                    orientation: 'vertical'
                    size: 50 , 70    
                    size_hint_x: 1  
                    size_hint_y: 1
                    TextInput:
                        id: timonto     
                        hint_text:"Monto"
                        input_filter: 'float'
                        focused: True
                        write_tab: False 
                        multiline: False 
                        font_size: '20sp'      
                        disabled: not cajaa.active 
                        on_text_validate: root.enter(1)              
                    Label:
                        text: 'Monto'
                        color: 0, 0, 0, 1
                        font_size: '20sp'   
                        disabled: not cajaa.active  
                        id: lbAnterior

                BoxLayout:   
                    orientation: 'vertical'  
                    size: 200 , 70  
                    size_hint_x: 1  
                    size_hint_y: 1
                    BoxLayout:   
                        orientation: 'horizontal'  
                        TextInput:
                            size: 30 , 33         
                            id: tiPago 
                            input_filter: 'int'
                            hint_text:"Pagó"
                            font_size: '20sp'    
                            focused: True
                            write_tab: False 
                            disabled: not cajaa.active 
                            multiline: False   
                            on_text: root.filtro()
                            on_text_validate: root.enter(2)  
                        Label:
                            text: 'Efectivo'
                            size: 168 , 33  
                            color: 0, 0, 0, 1
                            disabled: not cajaa.active 
                            font_size: '20sp'    
                            id: lbPago
                    Label:
                        text: 'Pagó'
                        color: 0, 0, 0, 1
                        font_size: '20sp'    
                        disabled: not cajaa.active 
                        id: lbPagoAnterior

                BoxLayout:  
                    size: 350 , 70  
                    orientation: 'vertical'
                    size_hint_x: 1  
                    size_hint_y: 1
                    TextInput:
                        focused: True
                        write_tab: False 
                        hint_text: 'Observación'
                        multiline: False     
                        disabled: not cajaa.active 
                        font_size: '20sp'      
                        on_text_validate: root.enter(3)   
                        id: tiobservacion  
                    Label:
                        text: 'Observacion'
                        color: 0, 0, 0, 1
                        font_size: '20sp'   
                        disabled: not cajaa.active  
                        id: lbobserAnt
    BoxLayout:
        orientation:'horizontal'
        id:boxb
        size_hint: None, None
        size: 810, 90
        Scatter:         
            id: Scatb
            do_rotation : False     
            scale_min : .5 
            scale_max : 2.                
            GridLayout:
                size: 810 , 90  
                rows: 1
                cols: 4
                size_hint_x: .7  
                size_hint_y: .10
                BoxLayout:   
                    orientation: 'vertical'  
                    size: 170 , 70  
                    size_hint_x: 1  
                    size_hint_y: 1
                    Label:
                        text: 'Cargar Venta:   '    
                        font_size: '20sp'    
                        disabled: not cajab.active 
                        color: 0, 0, 0, 1      
                    Label:
                        text: 'Venta Anterior: '
                        font_size: '20sp'    
                        color: 0, 0, 0, 1
                        disabled: not cajab.active 
                BoxLayout:   
                    orientation: 'vertical'
                    size: 50 , 70    
                    size_hint_x: 1  
                    size_hint_y: 1
                    TextInput:
                        id: timontob     
                        input_filter: 'float'
                        font_size: '20sp'   
                        hint_text:"Monto"        
                        focused: True
                        write_tab: False 
                        disabled: not cajab.active 
                        multiline: False   
                        on_text_validate: root.enter(1)              
                    Label:
                        text: 'Monto Ant'
                        color: 0, 0, 0, 1
                        disabled: not cajab.active 
                        font_size: '20sp'    
                        id: lbAnteriorb

                BoxLayout:   
                    orientation: 'vertical'  
                    size: 200 , 70  
                    size_hint_x: 1  
                    size_hint_y: 1
                    BoxLayout:   
                        orientation: 'horizontal'  
                        TextInput:
                            size: 30 , 33         
                            id: tiPagob 
                            input_filter: 'int'
                            disabled: not cajab.active 
                            font_size: '20sp'    
                            focused: True
                            hint_text:"Pagó"
                            write_tab: False 
                            multiline: False   
                            on_text: root.filtro()
                            on_text_validate: root.enter(2)  
                        Label:
                            text: 'Efectivo'
                            size: 168 , 33  
                            font_size: '20sp'
                            disabled: not cajab.active     
                            color: 0, 0, 0, 1
                            id: lbPagob
                    Label:
                        text: 'Pago'
                        color: 0, 0, 0, 1
                        font_size: '20sp'   
                        disabled: not cajab.active  
                        id: lbPagoAnteriorb

                BoxLayout:  
                    size: 350 , 70  
                    orientation: 'vertical'
                    size_hint_x: 1  
                    size_hint_y: 1
                    TextInput:
                        focused: True
                        write_tab: False 
                        multiline: False     
                        hint_text:'Observación'
                        font_size: '20sp'    
                        disabled: not cajab.active   
                        on_text_validate: root.enter(3)   
                        id: tiobservacionb  
                    Label:
                        text: 'Observacion Anterior'
                        color: 0, 0, 0, 1
                        font_size: '20sp'
                        disabled: not cajab.active     
                        id: lbobserAntb
    BoxLayout:
        orientation:'horizontal'
        size_hint_x: 1  
        size_hint_y: .12
        Button:
            text: 'Borrar Anterior'
            font_size: '25sp'
			background_normal: 'normal.png'			        
			background_color: 1, .745, .039, 1
            id: btnBorrarAnt
        Button:
            text: 'Gestionar Cajas'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
            id: btnConsultarTurno
        Button:
            text: 'Consultar Ventas'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
            id: btnConsultarTurno
        Button:
            text: 'Gestionar Turnos'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
            id: btnGestionarTurno
        Button:
            text: 'Salir'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
			on_press: app.stop() 



