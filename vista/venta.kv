#:kivy 1.10.0

<Box>:
    text: 'Venta'
	orientation: 'horizontal'
	spacing: 2
	padding: 50

    BoxLayout:   
	    orientation: 'vertical'
		TextInput:
            input_filter: 'float'
            focused: True
            multiline: False
            id: timonto                             
		Label:
            text: "Monto Ant"
            id: lbAnterior

    BoxLayout:   
        orientation: 'vertical'  
        Button:
            text:'Efectivo'
            id:btnMain          
        DropDown:
            focused: True
            id: drpTipoPago 
        Label:
            text: "Pago"
            id: lbPagoAnterior

    BoxLayout:   
	    orientation: 'vertical'
		TextInput:
            focused: True
            id: tiobservacion  
		Label:
            text: "Observacion Anterior"
            id: lbobserAnt

    BoxLayout:   
	    orientation: 'vertical'
		Button:
            focused: True
            text: "Registrar"
            pos_hint: {'x': 0, 'y': 0}
            size_hint: 1, .5
            id: btn_RegVenta
            on_press: root.btnRegistrarVenta()  
		Button:
            text: "Borrar"
            pos_hint: {'x': 0, 'y': .5}
            size_hint: 1, .5
            id: btn_Borrar
            on_press: root.btnBorrar()  
        