#:kivy 1.10.0

<Box>:
    text: 'Venta'
	orientation: 'horizontal'
	spacing: 2
	padding: 70
    
    canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:   
	    orientation: 'vertical'              
		Label:
            text: 'Cargar Venta:'          
		Label:
            text: 'Venta Anterior:'	
    BoxLayout:   
	    orientation: 'vertical'
		TextInput:
            id: timonto     
            input_filter: 'float'
            focused: True
            write_tab: False 
            multiline: False       
            on_text_validate: root.enter(1)                
		Label:
            text: 'Monto Ant'
            id: lbAnterior

    BoxLayout:   
        orientation: 'vertical'  
		BoxLayout:   
            orientation: 'horizontal'  
            TextInput:
                id: tiPago 
                input_filter: 'int'
                focused: True
                write_tab: False 
                multiline: False   
                on_text: root.filtro()
                on_text_validate: root.enter(2)  
            Label:
                text: 'Efectivo'
                id: lbPago
        Label:
            text: 'Pago'
            id: lbPagoAnterior

    BoxLayout:   
	    orientation: 'vertical'
		TextInput:
            focused: True
            write_tab: False 
            multiline: False       
            on_text_validate: root.enter(3)   
            id: tiobservacion  
		Label:
            text: 'Observacion Anterior'
            id: lbobserAnt