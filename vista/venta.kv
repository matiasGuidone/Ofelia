#:kivy 1.10.0

<Box>:
    text: 'Venta'
	orientation: 'vertical'  
    canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
    
    Scatter:         
        id: Scat
        do_rotation : False     
        scale_min : .5 
        scale_max : 2.                
        GridLayout:
            size: 810 , 110  
            rows: 1
            cols: 4
            size_hint_x: .7  
            size_hint_y: .10
            BoxLayout:   
                orientation: 'vertical'  
                size: 170 , 70  
                size_hint_x: 1  
                size_hint_y: 1
                Label:
                    text: 'Cargar Venta:   '    
                    color: 0, 0, 0, 1      
                Label:
                    text: 'Venta Anterior: '
                    color: 0, 0, 0, 1
            BoxLayout:   
                orientation: 'vertical'
                size: 50 , 70    
                size_hint_x: 1  
                size_hint_y: 1
                TextInput:
                    id: timonto     
                    input_filter: 'float'
                    focused: True
                    write_tab: False 
                    multiline: False   
                    on_text_validate: root.enter(1)              
                Label:
                    text: 'Monto Ant'
                    color: 0, 0, 0, 1
                    id: lbAnterior

            BoxLayout:   
                orientation: 'vertical'  
                size: 200 , 70  
                size_hint_x: 1  
                size_hint_y: 1
                BoxLayout:   
                    orientation: 'horizontal'  
                    TextInput:
                        size: 30 , 33         
                        id: tiPago 
                        input_filter: 'int'
                        focused: True
                        write_tab: False 
                        multiline: False   
                        on_text: root.filtro()
                        on_text_validate: root.enter(2)  
                    Label:
                        text: 'Efectivo'
                        size: 168 , 33  
                        color: 0, 0, 0, 1
                        id: lbPago
                Label:
                    text: 'Pago'
                    color: 0, 0, 0, 1
                    id: lbPagoAnterior

            BoxLayout:  
                size: 350 , 70  
                orientation: 'vertical'
                size_hint_x: 1  
                size_hint_y: 1
                TextInput:
                    focused: True
                    write_tab: False 
                    multiline: False       
                    on_text_validate: root.enter(3)   
                    id: tiobservacion  
                Label:
                    text: 'Observacion Anterior'
                    color: 0, 0, 0, 1
                    id: lbobserAnt
    BoxLayout:
        orientation:'horizontal'
        size_hint_x: 1  
        size_hint_y: .10
        Button:
            text: 'Borrar Anterior'
            id: btnBorrarAnt
        Button:
            text: 'Gestionar Cajas'
            id: btnConsultarTurno
        Button:
            text: 'Consultar Ventas'
            id: btnConsultarTurno
        Button:
            text: 'Gestionar Turnos'
            id: btnGestionarTurno
        Button:
            text: 'Salir'
            id: btnSalir



