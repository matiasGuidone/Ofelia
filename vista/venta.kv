    BoxLayout:
        orientation:'horizontal'
        size_hint_x: 1  
        size_hint_y: .12
        Button:
            text: 'Gestionar Cajas'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
            id: btnConsultarTurno
        Button:
            text: 'Consultar Ventas'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
            id: btnConsultarTurno
        Button:
            text: 'Gestionar Turnos'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
            id: btnGestionarTurno
        Button:
            text: 'Salir'
            font_size: '25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
			on_press: app.stop() 



