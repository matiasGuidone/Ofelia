#:kivy 1.10.0

<Usuario>:
	name: 'Logueo'
	orientation: 'vertical'
	spacing: 10
	padding: 3
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:					 
	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: 'Lista de usuarios: '
			font_size :'25sp'		       
			color: 0, 0, 0, 1
		Button:
			id: btnMain
			font_size :'25sp'
			background_normal: 'normal.png'		        
			background_color: 1, .745, .039, 1
			text: "Seleccionar"
		DropDown:
			id: drpUsuarios 
			font_size :'25sp'
			background_normal: 'normal.png'				        
			background_color: 1, .745, .039, 1
			
	BoxLayout:	
	BoxLayout:
		orientation: 'horizontal'
		Label:
		Button:
			on_press: root.btnEditar()
			id: btnEditar
			font_size :'25sp'
			background_normal: 'normal.png'		
			text: ' Editar '		        
			background_color: 1, .745, .039, 1
		Button:
			font_size :'25sp'
			background_normal: 'normal.png'		      
			background_color: 1, .745, .039, 1
			on_press: root.btnNuevo()
			text: ' Nuevo '
			id: btnNuevo
		Button:
			on_press: root.btnEliminar()
			font_size :'25sp'
			background_normal: 'normal.png'		        
			background_color: 1, .745, .039, 1
			text:'Eliminar'
			id: btnEliminar
