#:kivy 1.10.0

<Box>:
	name: 'Logueo'
	orientation: 'vertical'
	spacing: 10
	padding: 3
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		Image:
			source: 'Logo.png'
			size: 150,77
	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: 'Usuario'
			color: 0, 0, 0, 1
		TextInput:
		 
	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			text: 'Password'
			color: 0, 0, 0, 1
		TextInput:
			password: True
			 
	BoxLayout:
        orientation: 'horizontal'
        Button:
			text: 'Aceptar'
			background_color: .2, .4, .9, 1
        Button:
			text: 'Cancelar'
			background_color: .2, .4, .9, 1