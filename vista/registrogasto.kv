#:kivy 1.10.0
 

<Box>:
	text: 'Registro de gastos'
	orientation: 'vertical'
	size : 640, 300
	spacing: 40
	padding: 4
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		Image:
			source: 'vegetal.png'
	
	BoxLayout:
		orientation: 'horizontal'
		Label:
		
			text: 'Tipo de gasto'
			color: 0, 0, 0, 1
			
		ToggleButton:
		
            text:"Empleado"
            group: "tipog"
            id: btn-empleado
            on_press: root.btnEmpleado()
			background_color: .2, .4, .9, 1

        ToggleButton:
		
            text:"Proveedor"
            group: "tipog"
            id: btn-proveedor
            on_press: root.btnProveedor()
			background_color: .2, .4, .9, 1

		ToggleButton:
		
            text:"Fijos"
            group: "tipog"
            id: btn-fijos
            on_press: root.btnFijos()
			background_color: .2, .4, .9, 1
        ToggleButton:
		
            text:"Otros"
            group: "tipog"
            id: btn-otros
            on_press: root.btnOtros() 
			background_color: .2, .4, .9, 1

	BoxLayout:
		orientation: 'horizontal'
		Label:
			id: lblSubcate
			text: ''
			color: 0, 0, 0, 1
		Button:
			id: btnMainTG
			text: "Seleccionar"
		DropDown:
			id: drpTipogasto

	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			text: 'Gasto: '
			color: 0, 0, 0, 1
		TextInput:
			id: txtGasto
			input_filter: 'float'
			on_text: root.ingMonto()

	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			text: 'Monto abonado: '
			color: 0, 0, 0, 1
		BoxLayout:
			orientation: 'horizontal'
			BoxLayout:
				orientation: 'horizontal'
				CheckBox:
					id:modMonto  
					color: .2, .4, .9, 1
					active: False
				Label:
					text: 'Modificar'
					color: 0, 0, 0, 1

			TextInput:
				id: txtMonto
				input_filter: 'float'
				disabled: not modMonto.active
			 
			
			
	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		spacing: 10
		padding: 2
		Label:
			text: 'Observaciones: '
			color: 0, 0, 0, 1
		TextInput:
			id: txtObservaciones

	BoxLayout:

		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			id: lblInfo
			text: ''
			color: 0, 0, 0, 1

			 
	BoxLayout:
        orientation: 'horizontal'
        Button:
			text: 'Salir'
			background_color: .2, .4, .9, 1
			on_press: app.stop() 
		Button:
			text: 'Pagar'
			background_color: .2, .4, .9, 1
			on_press: root.btnPagar()