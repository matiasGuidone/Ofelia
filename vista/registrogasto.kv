#:kivy 1.10.0
 

<RegistroGasto>:
	text: 'Registro de gastos'
	orientation: 'vertical' 
	spacing: 15
	padding: 4
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		
	
	BoxLayout:
		orientation: 'horizontal'
		Image:
			source: 'veget.png'
			
		ToggleButton:
		
            text:"Empleado"
            group: "tipog"
            id: btn-empleado
            on_press: root.btnEmpleado()
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1

        ToggleButton:
		
            text:"Proveedor"
            group: "tipog"
            id: btn-proveedor
            on_press: root.btnProveedor()
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1

		ToggleButton:
		
            text:"Fijos"
            group: "tipog"
            id: btn-fijos
            on_press: root.btnFijos()
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1

        ToggleButton:
		
            text:"Otros"
            group: "tipog"
            id: btn-otros
            on_press: root.btnOtros() 
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1

	BoxLayout:
		orientation: 'horizontal'
		Label:
			id: lblSubcate
			font_size :'25sp'
			valign: 'center'
			text: ''
			color: 0, 0, 0, 1
		Button:
			id: btnMainTG
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1
			text: "Seleccionar"
		DropDown:
			id: drpTipogasto
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1

	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			text: 'Gasto: '
			font_size :'25sp'
			valign: 'center'
			color: 0, 0, 0, 1
		BoxLayout:
			background_color: 1, .3, .4, .85
			orientation: 'horizontal'
			Label: 
				text: 'pesos ($)'
				font_size :'25sp'
				color: 0, 0, 0, 1 
				valign: 'center'
				halign: 'left'
			TextInput:
				id: txtGasto
				input_filter: 'float'
				multiline:False
				valign: 'center'
				font_size :'20sp'
				on_text: root.ingMonto()
				on_text_validate: root.foco(1)
			

	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			text: 'Monto abonado: '
			valign: 'center'
			font_size :'25sp'
			color: 0, 0, 0, 1
		BoxLayout:
			orientation: 'horizontal'
			BoxLayout:
				orientation: 'horizontal'
				CheckBox:
					id:modMonto  
					font_size :'25sp'
					valign: 'center'
					color: .2, .4, .9, 1
					active: False
				Label:
					text: 'Modificar'
					valign: 'center'
					font_size :'25sp'
					color: 0, 0, 0, 1
			BoxLayout:
				orientation: 'horizontal'
				Label: 
					text: 'pesos ($)'
					font_size :'25sp'
					color: 0, 0, 0, 1
					valign: 'center'
					halign: 'right'
				TextInput:
					id: txtMonto
					input_filter: 'float'
					multiline:False
					valign: 'center'
					font_size :'20sp'
					on_text_validate: root.foco(2)
					disabled: not modMonto.active
			 
			
			
	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		spacing: 10
		padding: 2
		Label:
			text: 'Observaciones: '
			valign: 'center'
			font_size :'25sp'
			color: 0, 0, 0, 1
		TextInput:
			font_size :'20sp'
			multiline:False
			valign: 'center'
			id: txtObservaciones
			on_text_validate: root.foco(3)

	BoxLayout:

		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			id: lblInfo
			font_size :'25sp'
			valign: 'center'
			text: ''
			color: 1, .0, .0, 1

			 
	BoxLayout:
        orientation: 'horizontal'
        Button:
			text: 'Salir'
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1
			on_press: app.stop() 
		Button:
			text: 'Pagar'
			font_size :'25sp'
			background_normal: ''			        
			background_color: 1, .745, .039, 1
			on_press: root.btnPagar()