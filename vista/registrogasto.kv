#:kivy 1.10.0
 

<RegistroGasto>:
	text: 'Registro de gastos'
	orientation: 'vertical' 
	spacing: 15
	padding: 4
	canvas.before:
		Color:
			rgba:  1, 1, 1, 1
		Rectangle:
            pos: self.pos
            size: self.size

	BoxLayout:
			
	#	Image:
	#		size: 200, 200
	#		source: 'veget.png'
	BoxLayout:
		orientation: 'horizontal'			
		ToggleButton:
		
            text:"Empleado"
            group: "tipog"
            id: btn-empleado
            on_press: root.btnEmpleado()
			font_size :'25sp'
			background_normal: 'normal.png'			        
			background_color: 1, .745, .039, 1

        ToggleButton:
		
            text:"Proveedor"
            group: "tipog"
            id: btn-proveedor
            on_press: root.btnProveedor()
			font_size :'25sp'
			background_normal: 'normal.png'		        
			background_color: 1, .745, .039, 1

		ToggleButton:
		
            text:"Fijos"
            group: "tipog"
            id: btn-fijos
            on_press: root.btnFijos()
			font_size :'25sp'
			background_normal: 'normal.png'	       
			background_color: 1, .745, .039, 1

        ToggleButton:
		
            text:"Otros"
            group: "tipog"
            id: btn-otros
            on_press: root.btnOtros() 
			font_size :'25sp'
			background_normal: 'normal.png'			        
			background_color: 1, .745, .039, 1

	BoxLayout:
		orientation: 'horizontal'
		Label:
			id: lblSubcate
			font_size :'25sp'
			valign: 'center'
			halign: 'right'
			text: ''
			disabled: True
			color: 0, 0, 0, 1
		Button:
			id: btnMainTG
			font_size :'25sp'
			background_normal: 'normal.png'			        
			background_color: 1, .745, .039, 1
			disabled: True
			text: "Seleccionar"
		DropDown:
			id: drpTipogasto
			font_size :'25sp'
			background_normal: 'normal.png'		        
			background_color: 1, .745, .039, 1
			disabled: True

	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			id: lbgasto
			text: 'Gasto: '
			font_size :'25sp'
			valign: 'center'
			halign: 'right'
			disabled: True
			color: 0, 0, 0, 1
		BoxLayout:
			background_color: 1, .3, .4, .85
			orientation: 'horizontal'
			Label: 
				id: lbpesos
				text: 'pesos ($)'
				font_size :'25sp'
				color: 0, 0, 0, 1 
				valign: 'center'
				halign: 'left'
				disabled: True
			TextInput:
				id: txtGasto
				input_filter: 'float'
				multiline:False
				valign: 'center'
				font_size :'20sp'
				on_text: root.ingMonto()
				on_text_validate: root.foco(1)
				disabled: True
			

	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			id: lbmontoabonado
			text: 'Monto abonado: '
			valign: 'center'
			font_size :'25sp'
			halign: 'right'
			disabled: True
			color: 0, 0, 0, 1
		BoxLayout:
			orientation: 'horizontal'
			BoxLayout:
				orientation: 'horizontal'
				CheckBox:
					id:modMonto  
					font_size :'25sp'
					valign: 'center'
					color: 1, .745, .039, 1
					active: False
					disabled: True
				Label:
					id: lbmodificar
					text: 'Modificar'
					valign: 'center'
					font_size :'25sp'
					color: 0, 0, 0, 1
					disabled: True
			BoxLayout:
				orientation: 'horizontal'
				Label: 
					id: lbPesos
					text: 'pesos ($)'
					font_size :'25sp'
					color: 0, 0, 0, 1
					valign: 'center'
					halign: 'right'
					disabled: True
				TextInput:
					id: txtMonto
					input_filter: 'float'
					multiline:False
					valign: 'center'
					font_size :'20sp'
					on_text_validate: root.foco(2)
					disabled: not modMonto.active
			 
			
			
	BoxLayout:
		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		spacing: 10
		padding: 2
		Label:
			id: lbobservacion
			text: 'Observaciones: '
			valign: 'center'
			font_size :'25sp'
			halign: 'right'
			color: 0, 0, 0, 1
			disabled: True
		TextInput:
			font_size :'20sp'
			multiline:False
			valign: 'center'
			id: txtObservaciones
			on_text_validate: root.foco(3)
			disabled: True

	BoxLayout:

		background_color: 1, .3, .4, .85
		orientation: 'horizontal'
		Label:
			id: lblInfo
			font_size :'25sp'
			valign: 'center'
			text: ''
			color: 1, .0, .0, 1
			disabled: True

			 
	BoxLayout:
        orientation: 'horizontal'
        Button:
			text: 'Salir'
			font_size :'25sp'
			background_normal: 'normal.png'		        
			background_color: 1, .745, .039, 1
			on_press: app.stop() 
		Button:
			id: btnpagar
			text: 'Pagar'
			font_size :'25sp'
			background_normal: 'normal.png'			        
			background_color: 1, .745, .039, 1
			on_press: root.btnPagar()
			disabled: True